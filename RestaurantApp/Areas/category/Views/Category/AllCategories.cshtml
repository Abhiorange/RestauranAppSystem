@model List<ViewModels.Models.CategoryInfo>

<body>
<table class=" table my-2 table-bordered" id="categorytable">

                    <thead class="table-dark">
                        <tr>
                            <th scope="col">CategoryName</th>
                            <th scope="col">isActive</th>
                            <th scope="col">stocks</th>
                            <th>Action</th>
                        </tr>
                    </thead>


                    <tbody>

            @foreach (var u in Model)
            {
                                <tr>
                                    <td>@u.categoryname</td>
                    @{
                        if(u.isactive==1)
                        {
                            <td>Active</td>
                        }
                        else
                        {
                            <td>InActive</td>
                        }
                    }
                      <td>@u.stocks</td>
                                    
                                   

                                    <td class="d-flex">
                                        <button class="btn border-0">
                            <a asp-action="GetCategoryById" asp-controller="Category" type="button" class="text-warning" onclick="Editform(@u.CategoryId)" asp-route-id="@u.CategoryId">
                                            <i class="bi bi-pencil-square icon"></i>
                                            </a> </button>
                                            <button class="btn border-0">
                                         <a asp-action="DeleteCategoryById" asp-controller="Category" class="nav-link text-black deleteMission p-2" type="button" asp-route-id="@u.CategoryId"><i class="bi bi-trash3"></i></a>
                                            </button>
                                    </td>
                                </tr>
            }


                    </tbody>
                </table>
                <script src="~/lib/jquery/dist/jquery.min.js"></script>
 
       <script>
$(document).ready(function () {
            $('#categorytable').DataTable({

    });
});
</script>
     </body>  