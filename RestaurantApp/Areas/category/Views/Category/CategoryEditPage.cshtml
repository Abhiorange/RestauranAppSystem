@{    Layout = "../Shared/_Layout.cshtml";}@model ViewModels.Models.CategoryEditVm<body>    <div class="col-7 px-0" style="background-color: white;  height: auto;box-shadow: 4px 5px 5px #6c757d;margin-top:50px">        <div class="page-top" style="background-color: whitesmoke;box-shadow: 4px 5px 5px #6c757d;">            <div class="lockIcon mt-4">                <img id="mainicon" src="~/images/fries.png" style="height: 60px;" alt="">            </div>            <p class="mt-2"> Products Page</p>        </div>        <div class="container mb-4" style="display:flex;justify-content:center">            <form method="post" asp-action="EditCategory" asp-controller="Category" class="mx-2 " enctype="multipart/form-data">                <div style="display:flex;justify-content:center;height: 65px;"> <img id="milk" style="width:65px;height:65px;display:none" src="~/images/milk-cookie.gif" /></div>                <div class="col-12 d-flex flex-column my-2">                    <label for="title">CategoryName</label>                    <input type="text" id="title" class="form-control" asp-for="categoryname">                    <span class="text-danger" asp-validation-for="categoryname"></span>                </div>                <input asp-for="Id" type="text" hidden />                <div class="col-4 d-flex flex-column my-2">                    <label for="status">Stocks</label>                    <input type="text" id="title" class="form-control" asp-for="stocks">                    <span class="text-danger" asp-validation-for="stocks"></span>                </div>                <div class="col-4 d-flex flex-column my-2">                    <label for="status">IsActive</label>                    <select class="form-select dropdown-toggle" id="status" asp-for="isActive">                        <option value="1" selected="@Model.isActive.Equals(1)">Active</option>                        <option value="0" selected="@Model.isActive.Equals(0)">Inactive</option>                    </select>                </div>                <div class="mb-3">                    <label>Image</label>                    <div class="mt-2" style="display:flex;justify-content:space-around;align-items:center">                        <div style="justify-content: center;display: flex;width:200px; height:200px;">                            <img src="@Model.imagesrc" style="width:200px; height:200px; " />                        </div>                        <input type="file" style="width:100px" id="" class="file-input " accept="image/jpeg, image/PNG, image/jpg" asp-for="image">                    </div>                </div>                <hr>                <div class="d-flex justify-content-end">                    <button type="button" class="btn btn-secondary rounded-pill"> <a class="text-white text-decoration-none rounded-pill me-1">Cancel</a></button>                    <button type="submit" class="btn btn-outline-warning rounded-pill">Submit</button>                </div>            </form>        </div>    </div>    @section Scripts{        @{            <partial name="_ValidationScriptsPartial" />        }    }</body>