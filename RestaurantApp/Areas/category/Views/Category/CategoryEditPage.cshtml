@{    Layout = "../Shared/_Layout.cshtml";}@model ViewModels.Models.CategoryEditVm<body>    <div class="col-7 px-0" style="background-color: white;  height: auto;box-shadow: 4px 5px 5px #6c757d;margin-top:50px">        <div class ="page-top" style="background-color: whitesmoke;box-shadow: 4px 5px 5px #6c757d;">            <div class="lockIcon mt-4">                <img id="mainicon" src="~/images/fries.png" style="height: 60px;" alt="">            </div>            <p class="mt-2"> Products Page</p>        </div>        <div class="container mb-4" style="display:flex;justify-content:center">            <form method="post" asp-action="GetCategoryById" asp-controller="Category" class="mx-2">                <div style="display:flex;justify-content:center;height: 65px;"> <img id="milk" style="width:65px;height:65px;display:none" src="~/images/milk-cookie.gif" /></div>                <div class="mb-3">                    <label for="companyName" class="form-label">                        <p class="formInput">CategoryName<span style="color: red;">*</span></p>                    </label>                    <input type="text" class="form-control data" id="companyName" aria-describedby="" placeholder="company name" asp-for="categoryname">                    <span asp-validation-for="categoryname" class="text-danger"></span>                </div>                    <input asp-for="Id" type="text" hidden />                 <div class="mb-3">                    <label for="companyName" class="form-label">                        <p class="formInput">Stocks<span style="color: red;">*</span></p>                    </label>                    <input type="text" class="form-control data" id="companyName" aria-describedby="" placeholder="company name" asp-for="stocks">                    <span asp-validation-for ="stocks" class="text-danger"></span>                </div>                <div class="mb-3">                    <label for="status">IsActive</label>                    <select class="form-select dropdown-toggle" id="status" asp-for="isActive">                        <option value="1" selected="@Model.isActive.Equals(1)">Active</option>                        <option value="0" selected="@Model.isActive.Equals(0)">Inactive</option>                    </select>                </div>                                            <div class="d-flex justify-content-end">                    <button type="button" class="btn btn-secondary rounded-pill mx-3"> <a class="text-white text-decoration-none rounded-pill me-1">Cancel</a></button>                    <button type="submit" class="btn btn-outline-warning rounded-pill">Submit</button>                </div>            </form>        </div>    </div>    @section Scripts{        @{            <partial name="_ValidationScriptsPartial" />        }    }</body>