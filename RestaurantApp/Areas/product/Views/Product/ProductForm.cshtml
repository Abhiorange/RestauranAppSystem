@{    Layout = "../Shared/_Layout.cshtml";}@model ViewModels.Models.ProductAddVm<div class="col-7 px-0" style="background-color: white;  height: auto;box-shadow: 4px 5px 5px #6c757d;margin-top:50px">    <div class="page-top" style="">        <div class="lockIcon mt-4">            <img id="mainicon" src="~/images/fries.png" style="height: 60px;" alt="">        </div>        <p class="mt-2"> Products Page</p>    </div>    <div class="container mb-4" style="display:flex;justify-content:center">        @if (TempData["error"] != null)        {            <span class="text-danger">@TempData["error"]</span>        }        <form class="mt-5 formm" id="formm" asp-action="ProductAdd" asp-controller="Product">            <div style="display:flex;justify-content:center;height: 65px;"> <img id="milk" style="width:65px;height:65px;display:none" src="~/images/milk-cookie.gif" /></div>            <div class="mb-3">               <label for="contact" class="form-label">                        <p class="formInput">Select Categories<span style="color: red;">*</span></p>                    </label>                    <select id="SelectedCompanyId" class="form-select form-control" asp-for="categoryId" asp-items="@Model.Categories">                        <option>Select Category</option>                    </select>                    <span asp-validation-for="categoryId" class="text-danger"></span>            </div>            <div class="mb-3" >                <label for="categoryName" class="form-label">                    <p class="formInput">Product Name <span style="color: red;">*</span></p>                </label>                <input type="text" class="form-control data" id="" aria-describedby="" placeholder="Enter Product Name" asp-for="Productname">                 <span asp-validation-for="Productname" class="text-danger"></span>            </div>            <div class="mb-3" >                <label for="categoryName" class="form-label">                    <p class="formInput">Units <span style="color: red;">*</span></p>                </label>                <input type="text" class="form-control data" id="" aria-describedby="" placeholder="Enter Units" asp-for="units">                 <span asp-validation-for="units" class="text-danger"></span>            </div>            <div class="mb-3" >                <label for="categoryName" class="form-label">                    <p class="formInput">Unit Price <span style="color: red;">*</span></p>                </label>                <input type="text" class="form-control data" id="" aria-describedby="" placeholder="Enter Unit Price" asp-for="unitprice">                <span asp-validation-for="unitprice" class="text-danger"></span>            </div>            <div class="mb-3" style="display:flex;justify-content:center">                <button type="submit" value="submit" class="btn submit"                        style="background-color: red;color: white;border-radius: 7px;">                    Add                </button>            </div>            <hr>                       <div>            </div>        </form>    </div>    <div style="height:90px ; position:relative">        <div id="popcorn" style="position:absolute;bottom:0px">            <img src="~/images/popcornGif.gif" style="width:100px" />        </div>    </div></div><script>    $(document).ready(function () {        $("#mainicon").mouseenter(function () {            $("#mainicon").attr('src', '/images/pizza.png');        })        $("#mainicon").mouseleave(function () {            $("#mainicon").attr('src', '/images/fries.png');        })    })</script>