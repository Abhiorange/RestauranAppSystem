@{
    Layout = "../Shared/_Layout.cshtml";
}
@model ViewModels.Models.ProductEditVm

<body>
    <div class="container mt-2 overflow-tableEntry">
        <div class="col-12 bg-light border p-2">
            Edit
        </div>
        <div class="border">
            <form method="post" asp-action="GetProductById" asp-controller="Product" class="mx-2">
                <div style="display:flex;justify-content:center;height: 65px;"> <img id="milk" style="width:65px;height:65px;display:none" src="~/images/milk-cookie.gif" /></div>

                <div class="col-12 d-flex flex-column my-2">
                    <label for="title">ProductName</label>
                    <input type="text" id="title" class="form-control" asp-for="productname">
                    <span class="text-danger" asp-validation-for="productname"></span>
                </div>
                <input asp-for="productid" type="text" hidden />
                <div class="col-4 d-flex flex-column my-2">
                    <label for="status">Unit</label>
                    <input type="text" id="title" class="form-control" asp-for="unit">
                    <span class="text-danger" asp-validation-for="unit"></span>
                </div>
                <div class="col-4 d-flex flex-column my-2">
                    <label for="status">UnitPrice</label>
                    <input type="text" id="title" class="form-control" asp-for="unitprice">
                    <span class="text-danger" asp-validation-for="unitprice"></span>
                </div>
                <div class="col-4 d-flex flex-column my-2">
                    <label for="status">IsActive</label>
                    <select class="form-select dropdown-toggle" id="status" asp-for="isactive">
                        <option value="1" selected="@Model.isactive.Equals(1)">Active</option>
                        <option value="0" selected="@Model.isactive.Equals(0)">Inactive</option>
                    </select>

                </div>
                <div class="col-4 d-flex flex-column my-2">
                    <label for="status">Select Category</label>
                    <select id="SelectedCompanyId" class="form-select form-control" asp-for="categoryid" asp-items="@Model.Categories">
                        <option>Select Category</option>
                    </select>
                    <span asp-validation-for="categoryid" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-secondary rounded-pill"> <a class="text-white text-decoration-none rounded-pill me-1">Cancel</a></button>
                    <button type="submit" class="btn btn-outline-warning rounded-pill">Submit</button>
                </div>
            </form>
        </div>
    </div>


</body>
