@model List<ViewModels.Models.Userinfo>
 @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>*@
 @**@

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
   
<body>
<table class=" table my-2 table-bordered" id="usertable">
                  
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">email</th>
                            <th scope="col">Contact</th>
                            <th scope="col">UserCompanyName</th>
                            <th>Action</th>
                        </tr>
                    </thead>


                    <tbody>

                        @foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.name</td>
                                <td>@u.email</td>
                                <td>@u.contact</td>
                                <td>@u.companyname</td>
                               
                                <td class="d-flex">
                                    <button class="btn border-0">
                                       <a asp-action="GetUserById" asp-controller="Home" type="button" class="text-warning" asp-route-id="@u.UserId">
                                        <i class="bi bi-pencil-square icon"></i>
                                        </a> </button>
                                        <button class="btn border-0">
                                     <a asp-action="DeleteUserById" asp-controller="Home" class="nav-link text-black deleteMission p-2" type="button" asp-route-id="@u.UserId"><i class="bi bi-trash3"></i></a>
                                        </button>

                                  
                                </td>

                            </tr>

                        }


                    </tbody>
                </table>
                   <script src="~/lib/jquery/dist/jquery.min.js"></script>
                   <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
 <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
    <script>
        $.noConflict();
        jQuery( document ).ready(function( $ ) {
    $('#usertable').dataTable();
        });
</script>
     </body>  