@model ViewModels.Models.UserLoginVm
@{
    Layout = "../Shared/_Layout.cshtml";
}

@*<link href="~/css/respos.css" />*@
<div>
    @if (TempData["success"] != null)
    {
              <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
                <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
            <script type="text/javascript">
            toastr.success('@TempData["success"]');
            </script>
        }
    </div>
<div class="col-7 px-0" style="background-color: white;  height: fit-content;box-shadow: 4px 5px 5px #6c757d;position:relative;margin-top:50px">
    <div class="page-top" style="position:relative">
        
        <img src="~/images/bgtheme.jpg" style="object-fit: cover;position: absolute;height: 100%;width: 100%;z-index: 0;filter: opacity(0.4);" />
        <div class="lockIcon mt-4">
            <img id="mainicon" src="~/images/fries.png" style="height: 60px;z-index: 1;" alt="">
        </div>

        <p class="mt-2" style="z-index:1"> User Login Page</p>
    </div>
    <div class="container mb-4" style="display:flex;justify-content:center">
        @if (TempData["error"] != null)
        {
            <span class="text-danger">@TempData["error"]</span>
        }

       <form class="mt-5 formm" id="formm" asp-action="UserLogin" asp-controller="Home">
             <div style="display:flex;justify-content:center;height: 65px;"> <img id="milk" style="width:65px;height:65px;display:none" src="~/images/milk-cookie.gif" /></div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">
                    <p class="formInput">Email <span style="color: red;">*</span></p>
                </label>
                <input type="email" class="form-control data" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="evan.donohue@gmail.com" asp-for="email">
               <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">
                    <p class="formInput">Password <span style="color: red;">*</span></p>
                </label>
                <input type="password" class="form-control data" id="exampleInputPassword1" placeholder="**********" asp-for="password"> 
                 <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div style="display: flex;justify-content: center;">
                <img src="~/images/finger-fotor-bg-remover-20230623144328.png" class="finger" style="height: 38px;transform: scaleX(-1);display:none" />
                <button type="submit" id="submitbtn" value="submit" class="btn submit"
                        style="background-color: red;color: white;border-radius: 7px;">
                    Log In
                </button>
                <img src="~/images/peek3-fotor-bg-remover-20230623155433.png" class="finger" style="height: 38px; ;transform: scaleX(-1)" />
            </div>

            <hr>

            <div>
            </div>
           



        </form>

    </div>
    <div style="display:flex; justify-content:center ;z-index:2">

        <button class="btn" onclick="userRegister()"
                style="background-color: #d6d6d6; color: grey;border-radius: 7px;z-index:2">
            Create An
            Account
        </button>
    </div>
    <div style="height:90px ; position:relative">
        <div id="popcorn" style="position:absolute;bottom:0px">
            <img src="~/images/popcornGif.gif" style="width:100px" />
        </div>
    </div>
</div>

