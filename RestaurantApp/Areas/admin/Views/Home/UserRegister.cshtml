@model ViewModels.Models.UserRegisterVm
<body>
    <div class="container mt-5">
        <div class="row" style="background-color: cornsilk;">
        <div class="col d-flex p-3 justify-content-center">
            <div class="d-flex flex-column">
                <span class="rounded-circle bg-danger mx-auto p-3 text-white" style="width:57px"><i class="bi bi-lock ms-1"></i></span>
                <span>Create your Useraccount</span>
            </div>
        </div>
    </div>
    <div class="row" style="background-color: whitesmoke;">
    <div class="col-md-6 ps-md-5 ms-md-2">
            @if (ViewData["ErrorMessage"] != null)
            {
                <span class="text-danger">@ViewData["ErrorMessage"]</span>
            }
        <form method="post" asp-action="UserRegister" asp-controller="home">
            <div class="d-flex flex-column my-2">
                <label >Name<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" asp-for="name">
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column my-2">
                <label>UserCode<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" asp-for="userCode">
                <span asp-validation-for="userCode" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column my-2">
                <label>Password<span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" asp-for="password">
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
             <div class="d-flex flex-column my-2">
                <select id="SelectedCompanyId" class="form-select form-control"  asp-for="companyId" asp-items="@Model.Companies">
                 <option>Select Companies<</option>
                 </select>
                <span asp-validation-for="companyId" class="text-danger"></span> 
            </div>
             <div class="d-flex flex-column my-2">
                <label>Email<span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" asp-for="email">
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
              <div class="d-flex flex-column my-2">
                <label>contact<span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" asp-for="contact">
                <span asp-validation-for="contact" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-danger my-3 loginstyle" style="width:203px;">Register</button>
            </div>
            <div>
                <span>New To Aramex?</span>
            </div>
            <div>
                <button type="button" class="btn btn-danger my-3 loginstyle" style="width:203px;">login</button>
            </div>
        </form>
    </div>

</div>
    </div>
    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
</body>
