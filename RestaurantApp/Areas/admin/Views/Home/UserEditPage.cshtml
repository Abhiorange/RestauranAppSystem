@model ViewModels.Models.UserEditVm@{    Layout = "../Shared/_Layout.cshtml";}<div class="col-7 px-0" style="background-color: white;box-shadow: 4px 5px 5px #6c757d; height:fit-content; position:relative;margin-top:50px">    <div class="page-top" style="position:relative">        <img src="~/images/bgtheme.jpg" style="object-fit: cover;position: absolute;height: 100%;width: 100%;z-index: 0;filter: opacity(0.4);" />        <div class="lockIcon mt-4">            <img id="mainicon" src="~/images/fries.png" style="height: 60px;z-index: 1;" alt="">        </div>        <p class="mt-2" style="z-index:1"> User Registration Page</p>    </div>    <div class="container mb-4" style="display:flex;justify-content:center">        <form method="post" asp-action="GetUserById" asp-controller="Home" class="mx-2">            <div class="col-12 d-flex flex-column my-2">                <label for="title">Name</label>                <input type="text" id="title" class="form-control data" asp-for="name">                <span class="text-danger" asp-validation-for="name"></span>            </div>            <input asp-for="UserId" type="text" hidden />            <div class="col-4 d-flex flex-column my-2">                <label for="status">Email</label>                <input type="text" id="title" class="form-control data" asp-for="email">                <span class="text-danger" asp-validation-for="email"></span>            </div>            <div class="col-4 d-flex flex-column my-2">                <label for="status">Contact</label>                <input type="text" id="title" class="form-control data" asp-for="contact">                <span class="text-danger" asp-validation-for="contact"></span>            </div>            <div class="col-4 d-flex flex-column my-2">                <label for="status">Password</label>                <input type="text" id="title" class="form-control data" asp-for="password">                <span class="text-danger" asp-validation-for="password"></span>            </div>            <div class="col-4 d-flex flex-column my-2">                <label for="status">IsActive</label>                <select class="form-select dropdown-toggle data" id="status" asp-for="isactive">                    <option value="1" selected="@Model.isactive.Equals(1)">Active</option>                    <option value="0" selected="@Model.isactive.Equals(0)">Inactive</option>                </select>            </div>            <div class="col-4 d-flex flex-column my-2">                <label for="status">Select Role</label>                <select id="SelectedCompanyId" class="form-select form-control data" asp-for="roleId" asp-items="@Model.Roles">                    <option>Select Companies</option>                </select>                <span asp-validation-for="roleId" class="text-danger"></span>            </div>            <div class="d-flex justify-content-end">                <button type="button" class="btn btn-secondary rounded-pill"> <a class="text-white text-decoration-none rounded-pill me-1">Cancel</a></button>                <button type="submit" class="btn btn-outline-warning rounded-pill">Submit</button>            </div>        </form>    </div>    <div style="height:90px ; position:relative">        <div id="popcorn" style="position:absolute;bottom:0px">            <img src="~/images/popcornGif.gif" style="width:100px" />        </div>    </div></div>