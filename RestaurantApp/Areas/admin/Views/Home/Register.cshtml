@model ViewModels.Models.CompanyRegisterVm
<body>
    <div class="container mt-5">
        <div class="row" style="background-color: cornsilk;">
        <div class="col d-flex p-3 justify-content-center">
            <div class="d-flex flex-column">
                <span class="rounded-circle bg-danger mx-auto p-3 text-white" style="width:57px"><i class="bi bi-lock ms-1"></i></span>
                <span>Create your account</span>
            </div>
        </div>
    </div>
    <div class="row" style="background-color: whitesmoke;">
    <div class="col-md-6 ps-md-5 ms-md-2">
            @if (ViewData["ErrorMessage"] != null)
            {
                <span class="text-danger">@ViewData["ErrorMessage"]</span>
            }
        <form method="post" asp-action="Register" asp-controller="home">
            <div class="d-flex flex-column my-2">
                <label asp-for="companyName">CompanyName<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" asp-for="companyName">
                <span asp-validation-for="companyName" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column my-2">
                <label asp-for="companyCode">CompanyCode<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" asp-for="companyCode">
                <span asp-validation-for="companyCode" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column my-2">
                <label asp-for="password">Password<span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" asp-for="password">
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-danger my-3 loginstyle" style="width:203px;">Register</button>
            </div>
            <div>
                <span>New To Aramex?</span>
            </div>
            <div>
                <button type="button" class="btn btn-danger my-3 loginstyle" style="width:203px;">login</button>
            </div>
        </form>
    </div>

</div>
    </div>
    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
</body>
