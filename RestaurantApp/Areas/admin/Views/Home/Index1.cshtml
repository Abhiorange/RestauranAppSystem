@model ViewModels.Models.CompanyLoginVm
<head>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="container border mt-5">
        <div class="row" style="background-color: cornsilk;">
            <div class="col d-flex p-3 justify-content-center">
                <div class="d-flex flex-column">
                    <span class="rounded-circle bg-danger mx-auto p-3 text-white" style="width:57px"><i class="bi bi-lock ms-1"></i></span>
                    <span>Login to your Company account</span>
                </div>
            </div>
        </div>
        <div class="row" style="background-color: whitesmoke;">
            <div class="col-md-6 ps-md-5 ms-md-2">
                @if (TempData["ErrorMessage"] != null)
                {
                    <span class="text-danger">@TempData["ErrorMessage"]</span>
                }
                <form method="post" asp-action="Login" asp-controller="home">
                  
                    <div class="d-flex flex-column my-2">
                        <label>Name<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" asp-for="name">
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="d-flex flex-column my-2">
                        <label>Password<span class="text-danger">*</span></label>
                        <input type="password" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" asp-for="password">
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    <div class="my-2">
                        <span>Forget Your PAssword?</span>
                    </div>
                    <div class="d-flex my-3">
                        <input type="checkbox" class="me-2">
                        <span>Stay Logged in</span>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-danger my-3 loginstyle" style="width:203px;">login</button>
                    </div>
                </form>
              
                <div>
                    <span style="font-size: 23px;">New To Aramex?</span>
                </div>
                <div>
                    <a type="button" asp-action="UserLogin" asp-controller="Home" class="btn btn-secondary my-3 accountstyle" style="width:203px;">Login For User</a>
                </div>
                 <div>
                    <a type="button" asp-action="AllUsers" asp-controller="Home" class="btn btn-secondary my-3 accountstyle" style="width:203px;">All Users</a>
                </div>
                 <div>
                    <a type="button" asp-action="Register" asp-controller="Home" class="btn btn-secondary my-3 accountstyle" style="width:203px;">Create An Account</a>
                </div>
            </div>

        </div>
    </div>

    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
</body>