@model ViewModels.Models.CompanyRegisterVm

<div class="col-7 px-0" style="background-color: white;  height: fit-content;box-shadow: 4px 5px 5px #6c757d;position:relative;margin-top:50px">
    <div class="page-top" style="position:relative">
        
        <img src="~/images/bgtheme.jpg" style="object-fit: cover;position: absolute;height: 100%;width: 100%;z-index: 0;filter: opacity(0.4);" />
        <div class="lockIcon mt-4">
            <img id="mainicon" src="~/images/fries.png" style="height: 60px;z-index: 1;" alt="">
        </div>


        <p class="mt-2">Company Registraion Page</p>
    </div>
    <div class="container mb-4" style="display:flex;justify-content:center">
        <form class="mt-5 formm" id="formm" asp-action="Register" asp-controller="home">
            <div style="display:flex;justify-content:center;height: 65px;"> <img id="milk" style="width:65px;height:65px;display:none" src="~/images/milk-cookie.gif" /></div>

            <div class="mb-3">
                <label for="companyName" class="form-label">
                    <p class="formInput">Company Name <span style="color: red;">*</span></p>
                </label>
                <input type="name" class="form-control data"  id="companyName"
                       aria-describedby="" placeholder="company name" asp-for="companyName">
                        <span asp-validation-for="companyName" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label for="companyCode" class="form-label">
                    <p class="formInput">Company Code <span style="color: red;">*</span></p>
                </label>
                <input type="companyCode" class="form-control data"id="companyCode"
                       aria-describedby="" placeholder="company Code" asp-for="companyCode">
                       <span asp-validation-for="companyCode" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">
                    <p class="formInput">Password <span style="color: red;">*</span></p>
                </label>
                <input type="password" class="form-control data" id="exampleInputPassword1"
                       placeholder="**********" asp-for="password">
                          <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div style="display: flex;justify-content: center;">
                <button type="submit" value="submit" class="btn submit"
                        style="background-color: red;color: white;border-radius: 7px;">
                   Register
                </button>
            </div>

            <hr>

            <div>
            </div>
            



        </form>
    </div>

       <div style="display:flex; justify-content:center">
    <button class="btn" onclick="companyLogin()"
            style="background-color: #d6d6d6; color: grey;border-radius: 7px;">
        Log In
    </button>
    </div>
     <div style="height:90px ; position:relative">
            <div id="popcorn" style="position:absolute;bottom:0px">
                <img src="~/images/popcornGif.gif" style="width:100px" />
            </div>
        </div>
</div>

