@model ViewModels.Models.UserEditVm<body>    <div class="container mt-2 overflow-tableEntry">        <div class="col-12 bg-light border p-2">            Edit        </div>        <div class="border mx-2">            <form method="post" asp-action="GetUserById" asp-controller="Home">                <div class="col-12 d-flex flex-column my-2">                    <label for="title">Name</label>                    <input type="text" id="title" class="form-control" asp-for="name">                    <span class="text-danger" asp-validation-for="name"></span>                </div>                <input asp-for="UserId" type="text" hidden />                <div class="col-4 d-flex flex-column my-2">                    <label for="status">Email</label>                    <input type="text" id="title" class="form-control" asp-for="email">                    <span class="text-danger" asp-validation-for="email"></span>                </div>                <div class="col-4 d-flex flex-column my-2">                    <label for="status">Contact</label>                    <input type="text" id="title" class="form-control" asp-for="contact">                    <span class="text-danger" asp-validation-for="contact"></span>                </div>                <div class="col-4 d-flex flex-column my-2">                    <label for="status">Password</label>                    <input type="text" id="title" class="form-control" asp-for="password">                    <span class="text-danger" asp-validation-for="password"></span>                </div>                <div class="col-4 d-flex flex-column my-2">                    <select id="SelectedCompanyId" class="form-select form-control" asp-for="companyId" asp-items="@Model.Companies">                        <option>Select Companies</option>                    </select>                    <span asp-validation-for="companyId" class="text-danger"></span>                </div>                <div class="d-flex justify-content-end">                    <button type="button" class="btn btn-secondary rounded-pill"> <a class="text-white text-decoration-none rounded-pill me-1">Cancel</a></button>                    <button type="submit" class="btn btn-outline-warning rounded-pill">Submit</button>                </div>            </form>        </div>    </div>    @section Scripts{        @{            <partial name="_ValidationScriptsPartial" />        }    }</body>