<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/DatatableCss/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/css/DatatableCss/jquery.dataTables.min.css" rel="stylesheet />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="~/RestaurantApp.styles.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />*@
    <link href="~/css/respos.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>



</head>
<body>
    <div class="container-fluid">
        <main role="main" class="pb-3">

            <div id="mySidebar" class="sidebar">
                <div class="toggle-nav" style="">
                    <img src="~/images/restaurant2.jpg" style="opacity: 0.2;width: 100%;object-fit: cover;" alt="">
                    <p style="" class="m-0 aramex-title">
                        Food Zone
                    </p>
                    <a href="javascript:void(0)" style="padding: 0px;" class="closebtn" onclick="closeNav()">&times;</a>
                </div>


                <p id="drp" class="drpdes">
                    <a style="    margin-left: 15px;font-size:medium" asp-action="ServicesPage" asp-area="services" asp-controller="Service">ServicesPage</a>
                </p>
                <div id="drp" class="drp">
                    <p style=" margin-left: 15px;font-size:medium"> Master <span style="margin-left: 150px;"><i class="bi bi-chevron-down arrow"></i></span></p>
                </div>


                <div class="drpclass d-none" style=" background-color: #ffe599;"
                    <hr>
                    <div style=" background-color: #ffe599;">
                        <a type="button" asp-area="admin" asp-action="AllUsers" asp-controller="Home" type="button" class="pages" style="font-weight: 500;color: black;margin-left: 10px;">
                            <div style="">All Users</div>
                        </a>
                    </div>
                    <hr>
                    <div class="" style=" background-color: #ffe599;">
                        <a type="button" asp-area="category" asp-action="AllCategories" asp-controller="Category" type="button" class="pages" style="font-weight: 500;color: black;margin-left: 10px;">
                            <div style="">All Caegories</div>
                        </a>
                    </div>
                    <hr>
                    <div class="" style=" background-color: #ffe599;">
                        <a type="button" asp-area="product" asp-action="AllProducts" asp-controller="Product" type="button" class="layout-links" style="font-weight: 500;color: black;margin-left: 10px;">
                            <div style="">All Products</div>
                        </a>
                    </div>
                    <hr>
                     <div class="" style=" background-color: #ffe599;">
                        <a type="button" asp-area="role" asp-action="AllRoles" asp-controller="Role" type="button" class="pages"  style="font-weight: 500;color: black;margin-left: 10px;">
                            <div style="">Roles</div>
                        </a>
                    </div>
                    <hr>
                   
                    <div class="" style=" background-color: #ffe599;">
                        <a type="button" asp-area="discount" asp-action="AllDiscount" asp-controller="Discount" type="button" class="pages" style="font-weight: 500;color: black;margin-left: 10px;">
                            <div style="">Discount Master</div>
                        </a>
                    </div>
                    <hr>
                </div>

                <p id="drp" class="drpdes">
                    <a style="text-decoration:none;color:red ; font-size:medium;margin-left:15px" asp-area="orders" asp-action="OrdersDetails" asp-controller="Orders">Order Details</a>
                </p>

            </div>
            <!-- toggle ends -->
            <div id="main" style="z-index: 1;">
                <button class="openbtn position-absolute" onclick="openNav()">
                    <img src="~/images/burger.png" alt="" class="burgerImg">
                </button>
            </div>


            <!-- toggle 2  -->

            <div id="mySidebar2" class="sidebar2">
                <div class="toggle-nav" style="">
                    <img src="~/images/restaurant2.jpg" style="opacity: 0.2;width: 100%;object-fit: cover;" alt="">
                    <p style="" class="m-0 aramex-title">
                        Food Zone
                    </p>
                    <a href="javascript:void(0)" style="padding: 0px;" class="closebtn" onclick="closeNav()">&times;</a>
                </div>


                <p id="drp" class="drpdes">
                    <a style="    margin-left: 15px;font-size:medium" asp-action="ServicesPage" asp-area="services" asp-controller="Service">ServicesPage</a>
                </p>
                <div id="drp" class="drp">
                    <p style=" margin-left: 15px;font-size:medium"> Master <span style="margin-left: 150px;"><i class="bi bi-chevron-down arrow"></i></span></p>
                </div>


                <div class="drpclass d-none" style=" background-color: #ffe599;"
                    <hr>
                    <div style=" background-color: #ffe599;">
                        <a type="button" asp-area="admin" asp-action="AllUsers" asp-controller="Home" type="button" class="pages" style="font-weight: 500;color: black;margin-left: 10px;">
                            <div style="">All Users</div>
                        </a>
                    </div>
                    <hr>
                    <div class="" style=" background-color: #ffe599;">
                        <a type="button" asp-area="category" asp-action="AllCategories" asp-controller="Category" type="button" class="pages" style="font-weight: 500;color: black;margin-left: 10px;">
                            <div style="">All Caegories</div>
                        </a>
                    </div>
                    <hr>
                    <div class="" style=" background-color: #ffe599;">
                        <a type="button" asp-area="product" asp-action="AllProducts" asp-controller="Product" type="button" class="layout-links" style="font-weight: 500;color: black;margin-left: 10px;">
                            <div style="">All Products</div>
                        </a>
                    </div>
                    <hr>
                     <div class="" style=" background-color: #ffe599;">
                        <a type="button" asp-area="role" asp-action="AllRoles" asp-controller="Role" type="button" class="pages"  style="font-weight: 500;color: black;margin-left: 10px;">
                            <div style="">Roles</div>
                        </a>
                    </div>
                    <hr>

                    <div class="" style=" background-color: #ffe599;">
                        <a type="button" asp-area="discount" asp-action="AllDiscount" asp-controller="Discount" type="button" class="pages" style="font-weight: 500;color: black;margin-left: 10px;">
                            <div style="">Discount Master</div>
                        </a>
                    </div>
                    <hr>
                </div>

                <p id="drp" class="drpdes">
                    <a style="text-decoration:none;color:red ; font-size:medium;margin-left:15px" asp-area="orders" asp-action="OrdersDetails" asp-controller="Orders">Order Details</a>
                </p>


            </div>



           


            <div id="main2" style="z-index: 1;">
                <button class="openbtn2 position-absolute" onclick="openNav2()">
                    <img class="burgerImg"
                         src="~/images/burger.png" alt="">
                </button>
            </div>
            <!-- toggle 2 ends -->





            <div class="container-fluid row secondNav position-relative"
                 style="display: flex;height: 80px;justify-content: center;margin: 0px;object-fit: contain;  border-bottom: solid 2px;border-bottom-color: black; ">
                <img src="~/images/restaurant2.jpg"
                     style="height: 80px; width: 100%;object-fit: cover;opacity: 0.2;position: relative;" alt="">
                <div class="resTitle">
                    <img style="height:35px;width:35px" src="~/images/icon.png" /><p class="resp"> Restaurant POS</p>
                </div>
                <div class="dropdown text-end" style="position: absolute;right: 10px;top: 15px;background-color: #ffe599;border: solid grey 1px;border-radius: 11px;box-shadow: 4px 5px 5px #6c757d;">
                   
                    <div class="profile mt-1" style="display: flex;">
                        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <img src="~/images/pizza.png" alt="mdo" class="rounded-circle profileImg"><span class="profileSpan">
                                Evan
                                Donohue
                            </span>
                        </a>
                        <ul class="dropdown-menu text-small" style="background-color: #ffe599">


                            <li><a class="dropdown-item" asp-action="Index" asp-controller="Home">Sign out</a></li>
                            <li><a class="dropdown-item" asp-action="" asp-controller="">Profile</a></li>

                        </ul>

                    </div>
                </div>
            </div>

            <div class="container-fluid" style=" height: 700px;">

                <div class="row page" style="">
                    @RenderBody()
                </div>



            </div>
        </main>
    </div>
 
    <script>


    </script>

    <script src="~/Datatable/jquery.dataTables.js"></script>
    <script src="~/Datatable/jquery.dataTables.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/js/layout.js"></script>
    <script src="~/js/animation.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
