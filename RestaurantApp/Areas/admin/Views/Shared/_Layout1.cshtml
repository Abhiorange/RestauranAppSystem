<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/DatatableCss/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/css/DatatableCss/jquery.dataTables.min.css" rel="stylesheet  />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="~/RestaurantApp.styles.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />*@
    <link href="~/css/respos.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>


</head>
<body>

    <div class="container-fluid row secondNav position-relative"
         style="display: flex;height: 80px;justify-content: center;margin: 0px;object-fit: contain;  border-bottom: solid 2px;border-bottom-color: black; ">
        <img src="~/images/restaurant2.jpg"
             style="height: 80px; width: 100%;object-fit: cover;opacity: 0.2;position: relative;" alt="">
        <div class="resTitle">
            <img style="height:35px;width:35px" src="~/images/icon.png" /><p class="resp"> Restaurant POS</p>
        </div>
        <div class="dropdown text-end" style="position: absolute;right: 10px;top: 15px;background-color: #ffe599;border: solid grey 1px;border-radius: 11px;box-shadow: 4px 5px 5px #6c757d;">
            <!-- <div class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Dropdown link
                </a>

                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="#">Action</a></li>
                  <li><a class="dropdown-item" href="#">Another action</a></li>
                  <li><a class="dropdown-item" href="#">Something else here</a></li>
                </ul>
              </div> -->
            <div class="profile mt-1" style="display: flex;">
                <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown"
                   aria-expanded="false">
                    <img src="~/images/pizza.png" alt="mdo" class="rounded-circle profileImg"><span class="profileSpan">
                        Evan
                        Donohue
                    </span>
                </a>
                <ul class="dropdown-menu text-small" style="background-color: #ffe599">


                    <li><a class="dropdown-item" asp-action="Index" asp-controller="Home">Sign out</a></li>
                    <li><a class="dropdown-item" asp-action="" asp-controller="">Profile</a></li>

                </ul>

            </div>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>




    <script src="~/Datatable/jquery.dataTables.js"></script>
    <script src="~/Datatable/jquery.dataTables.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/js/layout.js"></script>
    <script src="~/js/animation.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
